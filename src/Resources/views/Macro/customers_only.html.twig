{% macro default(text) %}
    <span class="ui label">{{ text|trans }}</span>
{% endmacro %}

{% macro yesNo(value) %}
    {% import _self as labels %}

    {% if value %}
        {{ labels.yes() }}
    {% else %}
        {{ labels.no() }}
    {% endif %}
{% endmacro %}

{% macro yes() %}
    <span class="ui basic label">
        <i class="checkmark icon"></i>
        {{ 'smartarget_smartarget_whatsapp_contact_us.ui.yes_label'|trans }}
    </span>
{% endmacro %}

{% macro no() %}
    <span class="ui basic label">
        <i class="remove icon"></i>
        {{ 'smartarget_smartarget_whatsapp_contact_us.ui.no_label'|trans }}
    </span>
{% endmacro %}
